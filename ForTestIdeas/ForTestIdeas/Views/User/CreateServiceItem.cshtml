@using System.Text
@model ForTestIdeas.Models.ServiceItemViewModel

@{
    ViewData["Title"] = "CreateServiceItem";
}

@{
    Context.Session.TryGetValue("authentication-key", out var key);
    string encodedKey="";
    if (key != null) encodedKey = Convert.ToBase64String(key);
}

<h1>CreateServiceItem</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateServiceItem" asp-route-authKey=@encodedKey>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongDescripton" class="control-label"></label>
                <input asp-for="LongDescripton" class="form-control" />
                <span asp-validation-for="LongDescripton" class="text-danger"></span>
            </div>
            <p>
                <label>Name</label><br />
                <input type="text" name="Name" class="form-control" />
            </p>
            <p>
                <label>SureName</label><br />
                <input type="text" name="SureName" class="form-control" />
            </p>
            <p>
                <label>AuthKey</label><br />
                <input type="text" name="authKey" class="form-control" />
            </p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



